nav#top-nav(
  role="navigation"
  )
  ul.menu-options
    if navConfig
      each top_option in navConfig
        if top_option.display
          - has_children = top_option.subElements.length > 0
          li(
            id= top_option.id
            )
            a(
              href=top_option.url
              id= top_option.anchorId
              role= 'menuitem'
              if has_children
                aria-owns= top_option.anchorId + '-nav'
            )= top_option.displayText
              if has_children
                .icon-down-arrow.menu-pointer
            - sub_elements = top_option.subElements
            if has_children
              nav(
                id= top_option.anchorId + '-nav'
                role="menu"
                aria-labelledby= top_option.anchorId
                )
                ul.submenu-options
                  each child_option in sub_elements
                    if child_option.display
                      li
                        a.sub-nav(
                          href=child_option.url
                          id= child_option.id
                          class=(child_option.id == navId ? 'selected' : '')
                        )= child_option.displayText
