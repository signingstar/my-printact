form(
  method='post'
  action= refUrl
  )
  fieldset
    .email-input.field
      label(
        for='userid'
        ) Email Id
      input#userid-value(
        name='userid'
        placeholder='youremail@gmail.com'
        required
        type='email'
        )
    .password-input.field
      label(
        for='userpassword'
        ) Password
      input#userpassword-value(
        name='userpassword'
        required
        type='password'
        )
    .forgot-password
      a(
        href='/forgot-password'
        name='forgot-link'
        ) Forgot password?
    .remember-me
      input(
        type='checkbox'
        )
      span Remember Me
    .button
      input(
        type='submit'
        name='submit'
        value='Login'
        )
