      class=visible_section=='l-2-1' ? 'show' : 'hide'
      )
      include ./visiting_cards
    #stationary.sub-section(
      class=visible_section=='l-2-2' ? 'show' : 'hide'
      )
      include ./stationaries
    #broucher.sub-section(
      class=visible_section=='l-2-3' ? 'show' : 'hide'
      )
      include ./brouchers
